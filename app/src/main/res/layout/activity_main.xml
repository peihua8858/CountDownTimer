<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.fz.countdowntimer.CountdownView
        android:id="@+id/cv_countdown_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:isConvertDaysToHours="true"
        app:isShowDay="true"
        app:isShowHour="true"
        app:isShowMillisecond="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:limitHourDigits="99"
        app:limitMillisecondDigits="three"
        app:suffixBgColor="@color/colorPrimary"
        app:suffixBgRadius="6dp"
        app:suffixDay="天"
        app:suffixHour="时"
        app:suffixMillisecond="毫秒"
        app:suffixMinute="分"
        app:suffixPaddingBottom="4dp"
        app:suffixPaddingEnd="6dp"
        app:suffixPaddingStart="6dp"
        app:suffixPaddingTop="4dp"
        app:suffixSecond="秒"
        app:suffixTextColor="#FFFFFF"
        app:suffixTextSize="16sp"
        app:timeBgColor="#FFFFFF"
        app:timeBgRadius="6dp"
        app:timeMarginEnd="6dp"
        app:timeMarginStart="6dp"
        app:timePaddingBottom="4dp"
        app:timePaddingEnd="6dp"
        app:timePaddingStart="6dp"
        app:timePaddingTop="4dp"
        app:timeTextColor="#FF04"
        app:timeTextSize="16sp" />

    <com.fz.countdowntimer.CountdownView
        android:id="@+id/cv_countdown_timer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:dayFormat="%sD"
        app:hourFormat="%sh"
        app:isConvertDaysToHours="true"
        app:isShowDay="true"
        app:isShowHour="true"
        app:isShowMillisecond="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_countdown_timer"
        app:limitHourDigits="99"
        app:limitMillisecondDigits="three"
        app:millisecondFormat="%sms"
        app:minuteFormat="%sm"
        app:secondFormat="%ss"
        app:suffixBgColor="@color/colorPrimary"
        app:suffixBgRadius="6dp"
        app:suffixPaddingBottom="4dp"
        app:suffixPaddingEnd="6dp"
        app:suffixPaddingStart="6dp"
        app:suffixPaddingTop="4dp"
        app:suffixTextColor="#FFFFFF"
        app:suffixTextSize="16sp"
        app:timeBgColor="#FFFFFF"
        app:timeBgRadius="6dp"
        app:timeMarginEnd="6dp"
        app:timeMarginStart="6dp"
        app:timePaddingBottom="4dp"
        app:timePaddingEnd="6dp"
        app:timePaddingStart="6dp"
        app:timePaddingTop="4dp"
        app:timeTextColor="#FF04"
        app:timeTextSize="16sp" />

    <com.fz.countdowntimer.CountdownView
        android:id="@+id/cv_countdown_timer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:dayFormat="%sD"
        app:hourFormat="%sh"
        app:isConvertDaysToHours="false"
        app:isShowDay="true"
        app:isShowHour="true"
        app:isShowMillisecond="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_countdown_timer1"
        app:limitHourDigits="99"
        app:limitMillisecondDigits="two"
        app:millisecondFormat="%sms"
        app:minuteFormat="%sm"
        app:secondFormat="%ss"
        app:suffixBgRadius="6dp"
        app:suffixPaddingBottom="4dp"
        app:suffixPaddingEnd="6dp"
        app:suffixPaddingStart="6dp"
        app:suffixPaddingTop="4dp"
        app:suffixTextColor="#FFFFFF"
        app:suffixTextSize="16sp"
        app:timeBgColor="#FFFFFF"
        app:timeBgRadius="6dp"
        app:timeMarginEnd="6dp"
        app:timeMarginStart="6dp"
        app:timePaddingBottom="4dp"
        app:timePaddingEnd="6dp"
        app:timePaddingStart="6dp"
        app:timePaddingTop="4dp"
        app:timeTextColor="#FF04"
        app:timeTextSize="16sp" />

    <com.fz.countdowntimer.CountdownView
        android:id="@+id/cv_countdown_timer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:dayFormat="%sD"
        app:hourFormat="%sh"
        app:isConvertDaysToHours="true"
        app:isShowDay="false"
        app:isShowHour="true"
        app:isShowMillisecond="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_countdown_timer2"
        app:limitHourDigits="99"
        app:limitMillisecondDigits="two"
        app:millisecondFormat="%sms"
        app:minuteFormat="%sm"
        app:secondFormat="%ss"
        app:suffixBgRadius="6dp"
        app:suffixPaddingBottom="4dp"
        app:suffixPaddingEnd="6dp"
        app:suffixPaddingStart="6dp"
        app:suffixPaddingTop="4dp"
        app:suffixTextColor="#FFFFFF"
        app:suffixTextSize="16sp"
        app:timeBgColor="#FFFFFF"
        app:timeBgRadius="6dp"
        app:timeMarginEnd="6dp"
        app:timeMarginStart="6dp"
        app:timePaddingBottom="4dp"
        app:timePaddingEnd="6dp"
        app:timePaddingStart="6dp"
        app:timePaddingTop="4dp"
        app:timeTextColor="#FF04"
        app:timeTextSize="16sp" />
    <com.fz.countdowntimer.CountdownView
        android:id="@+id/cv_countdown_timer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:hourFormat="%sh"
        app:isConvertDaysToHours="true"
        app:isShowDay="false"
        app:isShowHour="false"
        app:isShowMillisecond="true"
        app:limitMinuteDigits="99"
        app:isShowMinute="false"
        app:isConvertMinutesToSeconds="true"
        app:limitSecondDigits="999"
        app:isShowSecond="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_countdown_timer3"
        app:limitHourDigits="99"
        app:limitMillisecondDigits="two"
        app:millisecondFormat="%sms"
        app:minuteFormat="%sm"
        app:secondFormat="%ss"
        app:suffixBgRadius="6dp"
        app:suffixPaddingBottom="4dp"
        app:suffixPaddingEnd="6dp"
        app:suffixPaddingStart="6dp"
        app:suffixPaddingTop="4dp"
        app:suffixTextColor="#FFFFFF"
        app:suffixTextSize="16sp"
        app:timeBackground="@drawable/time"
        app:timeBgRadius="6dp"
        app:timeBgSize="55dp"
        app:timeMarginEnd="6dp"
        app:timeMarginStart="6dp"
        app:timePaddingBottom="4dp"
        app:timePaddingEnd="6dp"
        app:timePaddingStart="6dp"
        app:timePaddingTop="4dp"
        app:timeTextColor="#FF04"
        app:timeTextSize="16sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Demo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>